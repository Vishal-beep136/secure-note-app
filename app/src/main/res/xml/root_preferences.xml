<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Security">

        <EditTextPreference
            app:key="app_password"
            app:title="App Password"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:isPreferenceVisible="false"
            app:key="change_app_password"
            app:title="Change App Password" />

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/open_passwords_methods_entries"
            app:entryValues="@array/open_passwords_methods_value"
            app:key="password_method"
            app:title="Open App From Password"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:isPreferenceVisible="false"
            app:key="custom_password"
            app:title="Custom Password"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:isPreferenceVisible="false"
            app:key="change_custom_password"
            app:title="Change Custom Password" />


    </PreferenceCategory>

    <PreferenceCategory app:title="App">
        <Preference
            app:key="privacy_preference"
            app:title="Privacy And Policies" />
        <Preference
            app:key="terms_of_use_preference"
            app:title="Terms of Use" />
    </PreferenceCategory>

</PreferenceScreen>